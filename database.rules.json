{
  "rules": {
    "canvases": {
      "$canvasId": {
        "presence": {
          ".read": "auth != null",
          ".write": false,
          "$userId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId",
            ".validate": "auth != null && newData.child('userId').val() == auth.uid"
          }
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
